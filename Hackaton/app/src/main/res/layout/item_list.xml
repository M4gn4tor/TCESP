<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="16dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#616161"
            android:text="Revitalização do Casarão"/>

        <ImageView
            android:id="@+id/btnShareFacebook"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:scaleType="center"
            android:background="@drawable/shareicon" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="160dp">

        <ImageView
            android:id="@+id/imgPicture"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            android:src="@drawable/seta"/>

        <FrameLayout
            android:id="@+id/frameHint"
            android:alpha="0.7"
            android:layout_alignParentBottom="true"
            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_height="48dp">

        </FrameLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtVotes"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#616161"
            android:text="5 pessoas"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <TextView
        android:id="@+id/txtDescription"
        android:maxLines="4"
        android:ellipsize="end"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Obra de revitalização do casarão, o qual vem sendo alvo de ataque de diver Lorem ipsum dolor sit amet, autem facete ei vel, possim nostrum tincidunt est ut. Ea pri purto elitr definiebas. Eros harum scripserit sea ad. Adhuc malorum impedit vix te, cu sea laoreet quaestio. Agam laboramus concludaturque eu duo, an per dicat vituperata, sea tale omnes mollis ne. Mazim eleifend urbanitas pri eu, ne has rebum iracundia." />

    <TextView
        android:id="@+id/txtPrice"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:text="Preço total: R$ 12.452.934,67"/>


</LinearLayout>