                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A "
                    android:textSize="32dp"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_marginTop="8dp"
        android:id="@+id/barIndex7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgIndex7"
            android:scaleType="fitStart"
            android:src="@drawable/seta"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bar_index_height_show"/>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtTI"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Governança TI"
                android:textColor="@android:color/white"
                android:textSize="32dp"/>

            <LinearLayout
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtIndiceTI"
                    android:layout_toRightOf="@+id/txtTI"
                    android:layout_marginRight="24dp"
                    android:layout_marginLeft="24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A "
                    android:textSize="32dp"/>

            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <include layout="@layout/include_footer"/>
</LinearLayout>
